	<flow name="post:\findDishwasherPrograms:application\json:grunstromindex-homeconnect-integration-api-config">
        <flow-ref doc:name="Flow Reference" doc:id="1e9aa6d1-adda-4e87-bacc-b6a270a23b11" name="retrieveHomeAppliances" />
		<set-variable value="#[(payload.data.homeappliances filter $[&quot;type&quot;] == &quot;Dishwasher&quot;)[0]]" doc:name="Set Variable" doc:id="a7bdf8f6-6955-4861-975d-b508c8e5b759" variableName="dishwasherInfo" />
        <set-variable value="#[output application/json &#xA;--- &#xA;p('homeconnect.programspath') replace '&lt;haid&gt;' with vars.dishwasherInfo.haId]" doc:name="Set Variable" doc:id="acb482c6-dd66-4b84-8f3b-b2261eecdedd" variableName="pathHomeConnectDeviceForPrograms" />
        <http:request method="GET" doc:name="Request" doc:id="bec1126d-99e4-4555-805e-69492319bf91" config-ref="Homeconnect_Request_configuration" path="#[vars.pathHomeConnectDeviceForPrograms]">
            <http:headers><![CDATA[#[output application/java
---
{
	"Authorization" : vars.accessToken
}]]]></http:headers>
        </http:request>
        <set-variable value="#[payload.data.programs]" doc:name="Set Variable" doc:id="e7a680e1-8344-4652-937b-b5cc689bc0f3" variableName="programsAvailable" />
        <logger level="INFO" doc:name="Logger" doc:id="7a599208-7ba9-44f3-8e6c-ce754dd2d8b5" message="#[vars.programsAvailable]" />
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  status: "200",
  dishwasherInformation: {
    name: vars.dishwasherInfo.name,
    brand: vars.dishwasherInfo.brand,
    vib: vars.dishwasherInfo.vib,
    connected: vars.dishwasherInfo.connected,
    "type": vars.dishwasherInfo["type"],
    enumber: vars.dishwasherInfo.enumber,
    haId: vars.dishwasherInfo.haId,
    programs: vars.programsAvailable
  },
  message: "success"
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
